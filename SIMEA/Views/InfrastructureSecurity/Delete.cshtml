@model SIMEA.Models.InfrastructureSecurityModel

@{
    ViewData["Title"] = "Delete Security Model";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">Delete Infrastructure Security Model</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this security model? This action cannot be undone.
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.SystemName):</label>
                            <p>@Html.DisplayFor(model => model.SystemName)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Owner):</label>
                            <p>@Html.DisplayFor(model => model.Owner)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.SecurityRequirement):</label>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.SecurityRequirement)
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.LastAuditDate):</label>
                            <p>@Html.DisplayFor(model => model.LastAuditDate)</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ComplianceStandards):</label>
                            @if (Model.ComplianceStandards != null && Model.ComplianceStandards.Any())
                            {
                                <div>
                                    @foreach (var standard in Model.ComplianceStandards)
                                    {
                                        <span class="badge badge-primary mr-2 mb-2">@standard</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No compliance standards defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Vulnerabilities):</label>
                            @if (Model.Vulnerabilities != null && Model.Vulnerabilities.Any())
                            {
                                <div>
                                    @foreach (var vulnerability in Model.Vulnerabilities)
                                    {
                                        <span class="badge badge-danger mr-2 mb-2">@vulnerability</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No vulnerabilities defined</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.MitigationStrategies):</label>
                            @if (Model.MitigationStrategies != null && Model.MitigationStrategies.Any())
                            {
                                <div>
                                    @foreach (var strategy in Model.MitigationStrategies)
                                    {
                                        <span class="badge badge-success mr-2 mb-2">@strategy</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No mitigation strategies defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Dependencies):</label>
                            @if (Model.Dependencies != null && Model.Dependencies.Any())
                            {
                                <div>
                                    @foreach (var dependency in Model.Dependencies)
                                    {
                                        <span class="badge badge-info mr-2 mb-2">@dependency</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No dependencies defined</p>
                            }
                        </div>
                    </div>
                </div>

                <hr />
                <form asp-action="Delete" onsubmit="return confirm('Are you absolutely sure you want to delete this security model?');">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>