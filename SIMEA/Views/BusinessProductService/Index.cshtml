@model IEnumerable<SIMEA.Models.BusinessProductServiceView>

@{
    ViewData["Title"] = "Business Products/Services";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Business Products/Services</h6>
                <div class="dropdown no-arrow">
                    <a class="btn btn-primary btn-sm" asp-action="Create">
                        <i class="fas fa-plus fa-sm"></i> Create New
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="productsTable" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductServiceName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TargetMarketCustomer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RevenueModel)
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductServiceName)
                                    </td>
                                    <td>
                                        @(item.Description.Length > 50 ? item.Description.Substring(0, 47) + "..." : item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TargetMarketCustomer)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RevenueModel)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productsTable').DataTable({
                "responsive": true,
                "language": {
                    "search": "Search products/services:",
                    "lengthMenu": "Show _MENU_ products/services per page",
                    "zeroRecords": "No products/services found",
                    "info": "Showing page _PAGE_ of _PAGES_",
                    "infoEmpty": "No products/services available",
                    "infoFiltered": "(filtered from _MAX_ total products/services)"
                }
            });
        });
    </script>
}