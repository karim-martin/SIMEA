@model SIMEA.Models.BusinessProductServiceView

@{
    ViewData["Title"] = "Delete Product/Service";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">Delete Business Product/Service</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this product/service? This action cannot be undone.
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ProductServiceName):</label>
                            <p>@Html.DisplayFor(model => model.ProductServiceName)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.RevenueModel):</label>
                            <p>@Html.DisplayFor(model => model.RevenueModel)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Description):</label>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.TargetMarketCustomer):</label>
                    <p>@Html.DisplayFor(model => model.TargetMarketCustomer)</p>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Key Features:</label>
                            @if (Model.KeyFeatures != null && Model.KeyFeatures.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var feature in Model.KeyFeatures)
                                    {
                                        <li class="list-group-item">@feature</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No key features defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Competitors:</label>
                            @if (Model.Competitors != null && Model.Competitors.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var competitor in Model.Competitors)
                                    {
                                        <li class="list-group-item">@competitor</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No competitors defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Dependencies:</label>
                            @if (Model.Dependencies != null && Model.Dependencies.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var dependency in Model.Dependencies)
                                    {
                                        <li class="list-group-item">@dependency</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No dependencies defined</p>
                            }
                        </div>
                    </div>
                </div>

                <hr />
                <form asp-action="Delete" onsubmit="return confirm('Are you absolutely sure you want to delete this product/service?');">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>