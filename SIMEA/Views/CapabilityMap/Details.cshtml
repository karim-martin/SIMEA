@model SIMEA.Models.CapabilityMap

@{
    ViewData["Title"] = "Capability Map Details";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Capability Map Details</h6>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit fa-sm"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left fa-sm"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.CapabilityName):</label>
                                    <p>@Html.DisplayFor(model => model.CapabilityName)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.MaturityLevel):</label>
                                    <p>
                                        <span class="badge badge-pill 
                                            @(Model.MaturityLevel == "Initial" ? "badge-secondary" : 
                                              Model.MaturityLevel == "Developing" ? "badge-info" : 
                                              Model.MaturityLevel == "Defined" ? "badge-primary" : 
                                              Model.MaturityLevel == "Managed" ? "badge-success" : 
                                              Model.MaturityLevel == "Optimized" ? "badge-warning" : "badge-light")">
                                            @Html.DisplayFor(model => model.MaturityLevel)
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.CapabilityDescription):</label>
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.CapabilityDescription)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Owner):</label>
                            <p>@Html.DisplayFor(model => model.Owner)</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Key Processes</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.KeyProcesses != null && Model.KeyProcesses.Any())
                        {
                            <ul class="list-group">
                                @foreach (var process in Model.KeyProcesses)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-cog mr-2 text-success"></i> @process
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No key processes defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Dependencies</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Dependencies != null && Model.Dependencies.Any())
                        {
                            <ul class="list-group">
                                @foreach (var dependency in Model.Dependencies)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-link mr-2 text-primary"></i> @dependency
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No dependencies defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Gaps</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Gaps != null && Model.Gaps.Any())
                        {
                            <ul class="list-group">
                                @foreach (var gap in Model.Gaps)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-exclamation-circle mr-2 text-danger"></i> @gap
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No gaps identified</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block mb-2">
                                <i class="fas fa-edit"></i> Edit Capability
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block mb-2">
                                <i class="fas fa-trash"></i> Delete Capability
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fas fa-list"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>