@model SIMEA.Models.TechnologyTrendModel

@{
    ViewData["Title"] = "Create Technology Trend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@ViewData["Title"]</h3>
                    <div class="card-tools">
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <form asp-action="Create" method="post">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TrendName" class="control-label"></label>
                                    <input asp-for="TrendName" class="form-control" />
                                    <span asp-validation-for="TrendName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TechnologyCategory" class="control-label"></label>
                                    <select asp-for="TechnologyCategory" class="form-control">
                                        <option value="">Select Category</option>
                                        <option value="AI/ML">AI/ML</option>
                                        <option value="Cloud">Cloud</option>
                                        <option value="IoT">IoT</option>
                                        <option value="Blockchain">Blockchain</option>
                                        <option value="Data Analytics">Data Analytics</option>
                                        <option value="Cybersecurity">Cybersecurity</option>
                                        <option value="Mobile">Mobile</option>
                                        <option value="DevOps">DevOps</option>
                                        <option value="Integration">Integration</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="TechnologyCategory" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="MaturityLevel" class="control-label"></label>
                                    <select asp-for="MaturityLevel" class="form-control">
                                        <option value="">Select Maturity Level</option>
                                        <option value="Emerging">Emerging</option>
                                        <option value="Growth">Growth</option>
                                        <option value="Mature">Mature</option>
                                        <option value="Declining">Declining</option>
                                    </select>
                                    <span asp-validation-for="MaturityLevel" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="AdoptionTimeline" class="control-label"></label>
                                    <select asp-for="AdoptionTimeline" class="form-control">
                                        <option value="">Select Timeline</option>
                                        <option value="0-1 years">0-1 years</option>
                                        <option value="1-3 years">1-3 years</option>
                                        <option value="3-5 years">3-5 years</option>
                                        <option value="5+ years">5+ years</option>
                                    </select>
                                    <span asp-validation-for="AdoptionTimeline" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="BusinessImpact" class="control-label"></label>
                                    <select asp-for="BusinessImpact" class="form-control">
                                        <option value="">Select Impact</option>
                                        <option value="High">High</option>
                                        <option value="Medium">Medium</option>
                                        <option value="Low">Low</option>
                                    </select>
                                    <span asp-validation-for="BusinessImpact" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="StrategicRelevance" class="control-label"></label>
                                    <input asp-for="StrategicRelevance" class="form-control" type="number" min="1" max="10" />
                                    <span asp-validation-for="StrategicRelevance" class="text-danger"></span>
                                    <small class="form-text text-muted">Scale: 1-10</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="DisruptionPotential" class="control-label"></label>
                                    <input asp-for="DisruptionPotential" class="form-control" type="number" min="1" max="10" />
                                    <span asp-validation-for="DisruptionPotential" class="text-danger"></span>
                                    <small class="form-text text-muted">Scale: 1-10</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="InvestmentRequired" class="control-label"></label>
                                    <input asp-for="InvestmentRequired" class="form-control" type="number" min="1" max="10" />
                                    <span asp-validation-for="InvestmentRequired" class="text-danger"></span>
                                    <small class="form-text text-muted">Scale: 1-10</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="RiskLevel" class="control-label"></label>
                                    <input asp-for="RiskLevel" class="form-control" type="number" min="1" max="10" />
                                    <span asp-validation-for="RiskLevel" class="text-danger"></span>
                                    <small class="form-text text-muted">Scale: 1-10</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AssessmentStatus" class="control-label"></label>
                                    <select asp-for="AssessmentStatus" class="form-control">
                                        <option value="">Select Status</option>
                                        <option value="Identified">Identified</option>
                                        <option value="Under Review">Under Review</option>
                                        <option value="Assessed">Assessed</option>
                                        <option value="Approved for Exploration">Approved for Exploration</option>
                                    </select>
                                    <span asp-validation-for="AssessmentStatus" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="NextReviewDate" class="control-label"></label>
                                    <input asp-for="NextReviewDate" class="form-control" type="date" />
                                    <span asp-validation-for="NextReviewDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="ExpectedBusinessValue" class="control-label"></label>
                            <input asp-for="ExpectedBusinessValue" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ExpectedBusinessValue" class="text-danger"></span>
                            <small class="form-text text-muted">Optional: Expected business value in currency</small>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 