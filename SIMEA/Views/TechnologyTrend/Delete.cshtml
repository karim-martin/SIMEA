@model SIMEA.Models.TechnologyTrendModel

@{
    ViewData["Title"] = "Delete Technology Trend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger">
                    <h3 class="card-title text-white">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4><i class="icon fas fa-exclamation-triangle"></i> Warning!</h4>
                        Are you sure you want to delete this technology trend record?
                    </div>

                    <h4 class="text-danger">@Model.TrendName</h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">@Model.TrendCategory</dd>
                                <dt class="col-sm-4">Maturity:</dt>
                                <dd class="col-sm-8">@Model.MaturityLevel</dd>
                                <dt class="col-sm-4">Strategic Relevance:</dt>
                                <dd class="col-sm-8">@Model.StrategicRelevance</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Disruption Potential:</dt>
                                <dd class="col-sm-8">@Model.DisruptionPotential/10</dd>
                                <dt class="col-sm-4">Risk Assessment:</dt>
                                <dd class="col-sm-8">@Model.RiskAssessment</dd>
                                <dt class="col-sm-4">Investment Required:</dt>
                                <dd class="col-sm-8">@Model.InvestmentRequired/10</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-3">
                            <strong>Description:</strong>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    }

                    <div class="mt-3">
                        <small class="text-muted">
                            Created by @(Model.UserCreated ?? "System") on @(Model.DateCreated?.ToString("MMM dd, yyyy HH:mm") ?? "Unknown")
                            @if (Model.UserModified != null)
                            {
                                <br />
                                <text>Last modified by @Model.UserModified on @Model.DateModified?.ToString("MMM dd, yyyy HH:mm")</text>
                            }
                        </small>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post" style="display: inline;">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('Are you absolutely sure you want to delete this technology trend? This action cannot be undone.');">
                            <i class="fas fa-trash"></i> Delete Permanently
                        </button>
                    </form>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 