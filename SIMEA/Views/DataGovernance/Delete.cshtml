@model SIMEA.Models.DataGovernanceModel

@{
    ViewData["Title"] = "Delete Data Governance Model";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">Delete Data Governance Model</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this data governance model? This action cannot be undone.
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataEntity):</label>
                    <p>@Html.DisplayFor(model => model.DataEntity)</p>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataOwner):</label>
                            <p>@Html.DisplayFor(model => model.DataOwner)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataSteward):</label>
                            <p>@Html.DisplayFor(model => model.DataSteward)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataLifecycle):</label>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.DataLifecycle)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataQualityMetrics):</label>
                            @if (Model.DataQualityMetrics != null && Model.DataQualityMetrics.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var metric in Model.DataQualityMetrics)
                                    {
                                        <li class="list-group-item">@metric</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No quality metrics defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataPolicies):</label>
                            @if (Model.DataPolicies != null && Model.DataPolicies.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var policy in Model.DataPolicies)
                                    {
                                        <li class="list-group-item">@policy</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No data policies defined</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ComplianceRequirements):</label>
                            @if (Model.ComplianceRequirements != null && Model.ComplianceRequirements.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var compliance in Model.ComplianceRequirements)
                                    {
                                        <li class="list-group-item">@compliance</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No compliance requirements defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Dependencies):</label>
                            @if (Model.Dependencies != null && Model.Dependencies.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var dependency in Model.Dependencies)
                                    {
                                        <li class="list-group-item">@dependency</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No dependencies defined</p>
                            }
                        </div>
                    </div>
                </div>

                <hr />
                <form asp-action="Delete" onsubmit="return confirm('Are you absolutely sure you want to delete this data governance model?');">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>