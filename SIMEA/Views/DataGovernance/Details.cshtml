@model SIMEA.Models.DataGovernanceModel

@{
    ViewData["Title"] = "Data Governance Details";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Data Governance Details</h6>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit fa-sm"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left fa-sm"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataEntity):</label>
                            <p>@Html.DisplayFor(model => model.DataEntity)</p>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataOwner):</label>
                                    <p>@Html.DisplayFor(model => model.DataOwner)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataSteward):</label>
                                    <p>@Html.DisplayFor(model => model.DataSteward)</p>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataLifecycle):</label>
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.DataLifecycle)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataQualityMetrics):</label>
                                    @if (Model.DataQualityMetrics != null && Model.DataQualityMetrics.Any())
                                    {
                                        <ul class="list-group">
                                            @foreach (var metric in Model.DataQualityMetrics)
                                            {
                                                <li class="list-group-item d-flex align-items-center">
                                                    <i class="fas fa-chart-line mr-2 text-info"></i> @metric
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No quality metrics defined</p>
                                    }
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataPolicies):</label>
                                    @if (Model.DataPolicies != null && Model.DataPolicies.Any())
                                    {
                                        <ul class="list-group">
                                            @foreach (var policy in Model.DataPolicies)
                                            {
                                                <li class="list-group-item d-flex align-items-center">
                                                    <i class="fas fa-file-contract mr-2 text-primary"></i> @policy
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <p class="text-muted">No data policies defined</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Compliance Requirements</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.ComplianceRequirements != null && Model.ComplianceRequirements.Any())
                        {
                            <ul class="list-group">
                                @foreach (var compliance in Model.ComplianceRequirements)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-shield-alt mr-2 text-warning"></i> @compliance
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No compliance requirements defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Dependencies</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Dependencies != null && Model.Dependencies.Any())
                        {
                            <ul class="list-group">
                                @foreach (var dependency in Model.Dependencies)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-link mr-2 text-secondary"></i> @dependency
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No dependencies defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block mb-2">
                                <i class="fas fa-edit"></i> Edit Model
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block mb-2">
                                <i class="fas fa-trash"></i> Delete Model
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fas fa-list"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>