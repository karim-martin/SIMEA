@model SIMEA.Models.ViewModels.EAOutputBaseViewModel

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-info">Metadata Information</h6>
        <div>
            <span class="badge badge-primary">Version Info</span>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-2">
                    <span class="font-weight-bold text-gray-800 mr-2">Generated:</span>
                    <span>@Model.GeneratedDate.ToString("yyyy-MM-dd HH:mm")</span>
                </div>
                <div class="mb-2">
                    <span class="font-weight-bold text-gray-800 mr-2">Generated By:</span>
                    <span>@(string.IsNullOrEmpty(Model.GeneratedBy) ? "System" : Model.GeneratedBy)</span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-2">
                    <span class="font-weight-bold text-gray-800 mr-2">Last Modified:</span>
                    <span>@Model.LastModifiedDate.ToString("yyyy-MM-dd HH:mm")</span>
                </div>
                <div class="mb-2">
                    <span class="font-weight-bold text-gray-800 mr-2">Modified By:</span>
                    <span>@(string.IsNullOrEmpty(Model.LastModifiedBy) ? "System" : Model.LastModifiedBy)</span>
                </div>
            </div>
        </div>
    </div>
</div> 