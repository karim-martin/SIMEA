@model SIMEA.Models.DataSecurityModel

@{
    ViewData["Title"] = "Delete Data Security Model";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">Delete Data Security Model</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this data security model? This action cannot be undone.
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataEntity):</label>
                    <p>@Html.DisplayFor(model => model.DataEntity)</p>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.SecurityRequirement):</label>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.SecurityRequirement)
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.AccessControls):</label>
                            <p>@Html.DisplayFor(model => model.AccessControls)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.EncryptionRequirements):</label>
                            <p>@Html.DisplayFor(model => model.EncryptionRequirements)</p>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Owner):</label>
                            <p>@Html.DisplayFor(model => model.Owner)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.LastAuditDate):</label>
                            <p>@Html.DisplayFor(model => model.LastAuditDate)</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ComplianceStandards):</label>
                            @if (Model.ComplianceStandards != null && Model.ComplianceStandards.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var standard in Model.ComplianceStandards)
                                    {
                                        <li class="list-group-item">@standard</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No compliance standards defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Dependencies):</label>
                            @if (Model.Dependencies != null && Model.Dependencies.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var dependency in Model.Dependencies)
                                    {
                                        <li class="list-group-item">@dependency</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No dependencies defined</p>
                            }
                        </div>
                    </div>
                </div>

                <hr />
                <form asp-action="Delete" onsubmit="return confirm('Are you absolutely sure you want to delete this data security model?');">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>