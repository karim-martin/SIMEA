@model SIMEA.Models.DataSecurityModel

@{
    ViewData["Title"] = "Data Security Details";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Data Security Details</h6>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit fa-sm"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left fa-sm"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataEntity):</label>
                            <p>@Html.DisplayFor(model => model.DataEntity)</p>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.SecurityRequirement):</label>
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.SecurityRequirement)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.AccessControls):</label>
                                    <p>@Html.DisplayFor(model => model.AccessControls)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.EncryptionRequirements):</label>
                                    <p>@Html.DisplayFor(model => model.EncryptionRequirements)</p>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Owner):</label>
                                    <p>@Html.DisplayFor(model => model.Owner)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.LastAuditDate):</label>
                                    <p>@Html.DisplayFor(model => model.LastAuditDate)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Security Status</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <div class="h5 mb-0 font-weight-bold text-primary">
                                    <i class="fas fa-shield-alt fa-2x mb-3"></i>
                                    <div>Security Controls</div>
                                </div>
                                <p class="mb-0">@Model.AccessControls</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="h5 mb-0 font-weight-bold text-success">
                                    <i class="fas fa-lock fa-2x mb-3"></i>
                                    <div>Encryption</div>
                                </div>
                                <p class="mb-0">@Model.EncryptionRequirements</p>
                            </div>
                            <div class="col-md-4 text-center">
                                <div class="h5 mb-0 font-weight-bold text-info">
                                    <i class="fas fa-calendar-check fa-2x mb-3"></i>
                                    <div>Last Audit</div>
                                </div>
                                <p class="mb-0">@Model.LastAuditDate</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Compliance Standards</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.ComplianceStandards != null && Model.ComplianceStandards.Any())
                        {
                            <ul class="list-group">
                                @foreach (var standard in Model.ComplianceStandards)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-check-circle mr-2 text-success"></i> @standard
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No compliance standards defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Dependencies</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Dependencies != null && Model.Dependencies.Any())
                        {
                            <ul class="list-group">
                                @foreach (var dependency in Model.Dependencies)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-link mr-2 text-secondary"></i> @dependency
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No dependencies defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block mb-2">
                                <i class="fas fa-edit"></i> Edit Security Model
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block mb-2">
                                <i class="fas fa-trash"></i> Delete Security Model
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fas fa-list"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>