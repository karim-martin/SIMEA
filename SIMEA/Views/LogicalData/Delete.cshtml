@model SIMEA.Models.LogicalDataModel

@{
    ViewData["Title"] = "Delete Logical Data Model";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">Delete Logical Data Model</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this logical data model? This action cannot be undone.
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.EntityName):</label>
                            <p>@Html.DisplayFor(model => model.EntityName)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Owner):</label>
                            <p>@Html.DisplayFor(model => model.Owner)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Description):</label>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.PrimaryKey):</label>
                            <p><code>@Html.DisplayFor(model => model.PrimaryKey)</code></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ForeignKey):</label>
                            <p>
                                @if (string.IsNullOrEmpty(Model.ForeignKey))
                                {
                                    <span class="text-muted">None</span>
                                }
                                else
                                {
                                    <code>@Html.DisplayFor(model => model.ForeignKey)</code>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Attributes:</label>
                            @if (Model.Attributes != null && Model.Attributes.Any())
                            {
                                <p><span class="badge badge-primary">@Model.Attributes.Count</span> attributes defined</p>
                            }
                            else
                            {
                                <p class="text-muted">No attributes defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Relationships:</label>
                            @if (Model.Relationships != null && Model.Relationships.Any())
                            {
                                <p><span class="badge badge-success">@Model.Relationships.Count</span> relationships defined</p>
                            }
                            else
                            {
                                <p class="text-muted">No relationships defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">Dependencies:</label>
                            @if (Model.Dependencies != null && Model.Dependencies.Any())
                            {
                                <p><span class="badge badge-info">@Model.Dependencies.Count</span> dependencies defined</p>
                            }
                            else
                            {
                                <p class="text-muted">No dependencies defined</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    <strong>Notice:</strong> Deleting this logical data model may impact artifacts that depend on it.
                </div>

                <hr />
                <form asp-action="Delete" onsubmit="return confirm('Are you absolutely sure you want to delete this logical data model?');">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>