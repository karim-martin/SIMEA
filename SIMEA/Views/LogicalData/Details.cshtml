@model SIMEA.Models.LogicalDataModel

@{
    ViewData["Title"] = "Logical Data Model Details";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Logical Data Model Details</h6>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit fa-sm"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left fa-sm"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.EntityName):</label>
                                    <p>@Html.DisplayFor(model => model.EntityName)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Owner):</label>
                                    <p>@Html.DisplayFor(model => model.Owner)</p>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Description):</label>
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.PrimaryKey):</label>
                                    <p><code>@Html.DisplayFor(model => model.PrimaryKey)</code></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ForeignKey):</label>
                                    <p>
                                        @if (string.IsNullOrEmpty(Model.ForeignKey))
                                        {
                                            <span class="text-muted">None</span>
                                        }
                                        else
                                        {
                                            <code>@Html.DisplayFor(model => model.ForeignKey)</code>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Attributes):</label>
                            @if (Model.Attributes != null && Model.Attributes.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered table-sm">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Attribute Definition</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var attr in Model.Attributes)
                                            {
                                                <tr>
                                                    <td><code>@attr</code></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No attributes defined</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Relationships</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Relationships != null && Model.Relationships.Any())
                        {
                            <ul class="list-group">
                                @foreach (var rel in Model.Relationships)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-project-diagram mr-2 text-success"></i> @rel
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No relationships defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Dependencies</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Dependencies != null && Model.Dependencies.Any())
                        {
                            <ul class="list-group">
                                @foreach (var dep in Model.Dependencies)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-link mr-2 text-info"></i> @dep
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No dependencies defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block mb-2">
                                <i class="fas fa-edit"></i> Edit Logical Data Model
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block mb-2">
                                <i class="fas fa-trash"></i> Delete Logical Data Model
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fas fa-list"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>