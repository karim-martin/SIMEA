@model SIMEA.Models.ApplicationDataCrossReference

@{
    ViewData["Title"] = "Data Cross Reference Details";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Application Data Cross Reference Details</h6>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit fa-sm"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left fa-sm"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col text-center">
                                                <div class="border rounded p-3 bg-light">
                                                    <h5 class="font-weight-bold">Application</h5>
                                                    <p class="lead mb-0 text-primary">@Html.DisplayFor(model => model.ApplicationName)</p>
                                                </div>
                                            </div>
                                            <div class="col-md-2 text-center d-flex align-items-center justify-content-center">
                                                <div>
                                                    <i class="fas fa-database fa-2x text-info"></i>
                                                    <p class="small mt-2 mb-0">uses</p>
                                                </div>
                                            </div>
                                            <div class="col text-center">
                                                <div class="border rounded p-3 bg-light">
                                                    <h5 class="font-weight-bold">Data Entity</h5>
                                                    <p class="lead mb-0 text-primary">@Html.DisplayFor(model => model.DataEntity)</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataUsage):</label>
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.DataUsage)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataSensitivity):</label>
                                    <p>
                                        <span class="badge badge-pill 
                                            @(Model.DataSensitivity == "High" ? "badge-danger" : 
                                            Model.DataSensitivity == "Medium" ? "badge-warning" : 
                                            Model.DataSensitivity == "Low" ? "badge-info" : 
                                            "badge-secondary")">
                                            @Html.DisplayFor(model => model.DataSensitivity)
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Owner):</label>
                                    <p>@Html.DisplayFor(model => model.Owner)</p>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.AccessControls):</label>
                                    <div class="p-3 bg-light rounded">
                                        @Html.DisplayFor(model => model.AccessControls)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.DataRetentionPolicy):</label>
                                    <div class="p-3 bg-light rounded">
                                        @Html.DisplayFor(model => model.DataRetentionPolicy)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Dependencies</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Dependencies != null && Model.Dependencies.Any())
                        {
                            <ul class="list-group">
                                @foreach (var dependency in Model.Dependencies)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-link mr-2 text-secondary"></i> @dependency
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No dependencies defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Data Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label class="font-weight-bold">Sensitivity Level:</label>
                            <p>
                                <span class="badge badge-pill 
                                    @(Model.DataSensitivity == "High" ? "badge-danger" : 
                                    Model.DataSensitivity == "Medium" ? "badge-warning" : 
                                    Model.DataSensitivity == "Low" ? "badge-info" : 
                                    "badge-secondary")">
                                    @Html.DisplayFor(model => model.DataSensitivity)
                                </span>
                            </p>
                        </div>
                        
                        <div class="form-group">
                            <label class="font-weight-bold">Retention Policy:</label>
                            <p>@Html.DisplayFor(model => model.DataRetentionPolicy)</p>
                        </div>
                        
                        <div class="form-group">
                            <label class="font-weight-bold">Access Controls:</label>
                            <p>@Html.DisplayFor(model => model.AccessControls)</p>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block mb-2">
                                <i class="fas fa-edit"></i> Edit Cross Reference
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block mb-2">
                                <i class="fas fa-trash"></i> Delete Cross Reference
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fas fa-list"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>