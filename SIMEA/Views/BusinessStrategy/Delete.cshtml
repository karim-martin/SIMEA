@model SIMEA.Models.BusinessStrategyView

@{
    ViewData["Title"] = "Delete Strategy";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="card shadow mb-4 border-left-danger">
            <div class="card-header py-3 bg-danger text-white">
                <h6 class="m-0 font-weight-bold">Delete Business Strategy</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this strategy? This action cannot be undone.
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.BusinessGoal):</label>
                            <p>@Html.DisplayFor(model => model.BusinessGoal)</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Timeframe):</label>
                            <p>@Html.DisplayFor(model => model.Timeframe)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.StrategicObjective):</label>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.StrategicObjective)
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.OrganizationalVisionAlignment):</label>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.OrganizationalVisionAlignment)
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Key Performance Indicators:</label>
                            @if (Model.KeyPerformanceIndicators != null && Model.KeyPerformanceIndicators.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var kpi in Model.KeyPerformanceIndicators)
                                    {
                                        <li class="list-group-item">@kpi</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No KPIs defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Stakeholders:</label>
                            @if (Model.Stakeholders != null && Model.Stakeholders.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var stakeholder in Model.Stakeholders)
                                    {
                                        <li class="list-group-item">@stakeholder</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No stakeholders defined</p>
                            }
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Risks:</label>
                            @if (Model.Risks != null && Model.Risks.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var risk in Model.Risks)
                                    {
                                        <li class="list-group-item">@risk</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No risks defined</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Dependencies:</label>
                            @if (Model.Dependencies != null && Model.Dependencies.Any())
                            {
                                <ul class="list-group">
                                    @foreach (var dependency in Model.Dependencies)
                                    {
                                        <li class="list-group-item">@dependency</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted">No dependencies defined</p>
                            }
                        </div>
                    </div>
                </div>

                <hr />
                <form asp-action="Delete" onsubmit="return confirm('Are you absolutely sure you want to delete this strategy?');">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>