@model SIMEA.Models.BusinessStrategyView

@{
    ViewData["Title"] = "Strategy Details";
    Layout = "~/Views/Shared/_LayoutAcc.cshtml";
}

<div class="form-horizontal">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Business Strategy Details</h6>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit fa-sm"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left fa-sm"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.BusinessGoal):</label>
                                    <p>@Html.DisplayFor(model => model.BusinessGoal)</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Timeframe):</label>
                                    <p>@Html.DisplayFor(model => model.Timeframe)</p>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.StrategicObjective):</label>
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.StrategicObjective)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.OrganizationalVisionAlignment):</label>
                            <div class="p-3 bg-light rounded">
                                @Html.DisplayFor(model => model.OrganizationalVisionAlignment)
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Key Performance Indicators</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.KeyPerformanceIndicators != null && Model.KeyPerformanceIndicators.Any())
                        {
                            <ul class="list-group">
                                @foreach (var kpi in Model.KeyPerformanceIndicators)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-chart-line mr-2 text-info"></i> @kpi
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No KPIs defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Stakeholders</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Stakeholders != null && Model.Stakeholders.Any())
                        {
                            <ul class="list-group">
                                @foreach (var stakeholder in Model.Stakeholders)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-user mr-2 text-primary"></i> @stakeholder
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No stakeholders defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Risks</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Risks != null && Model.Risks.Any())
                        {
                            <ul class="list-group">
                                @foreach (var risk in Model.Risks)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-exclamation-triangle mr-2 text-danger"></i> @risk
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No risks defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Dependencies</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Dependencies != null && Model.Dependencies.Any())
                        {
                            <ul class="list-group">
                                @foreach (var dependency in Model.Dependencies)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <i class="fas fa-link mr-2 text-secondary"></i> @dependency
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No dependencies defined</p>
                        }
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-block mb-2">
                                <i class="fas fa-edit"></i> Edit Strategy
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-block mb-2">
                                <i class="fas fa-trash"></i> Delete Strategy
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fas fa-list"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>